# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting (for security)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100           # Max requests per window per IP

# YouTube Downloader
YTDL_USER_AGENT=Mozilla/5.0  # Helps avoid YouTube blocks

# File Uploads
MAX_FILE_SIZE_MB=10          # Max upload size in MB
UPLOAD_FOLDER=./uploads      # Where to store temp files

# CORS Whitelist (add your frontend URLs)
ALLOWED_ORIGINS=https://sites.google.com,https://your-username.github.io
